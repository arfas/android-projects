<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
            <solid
                android:color="#7eaf16" />
            <stroke
                android:width="4dp"
                android:color="#ffffff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
            <gradient
                android:startColor="#966ec3"
                android:endColor="#734c9e"
                android:angle="270" />
            <stroke
                android:width="4dp"
                android:color="#ffffff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
